<div class="row">
  <div class="col-md-8">
    <form action='/<%= idea.id %>' method='POST'>
      <% if idea.id %>
        <h3>Edit your Idea:</h3>
      <% else %>
        <h3>Your Idea:</h3>
      <% end %>
      <% if idea.id %>
        <input type="hidden" name="_method" value="PUT" />
      <% end %>
      <form class="form-horizontal" role="form">
        <div class="form-group">
          <label for="ideaTitle" class="col-sm-2 control-label">Idea Title</label>
          <div class="col-sm-10">
            <input type='text' class="form-control" id="ideaTitle" placeholder="Enter your Idea Title" name='idea[title]' value="<%= idea.title %>"/><br/>
          </div>
        </div>
        <div class="form-group">
          <label for="ideaDescription" class="col-sm-2 control-label">Idea Description</label>
          <div class="col-sm-10">
            <input type='text' class="form-control" id="ideaDescription" placeholder="Enter the Description" name='idea[description]' value="<%= idea.description %>"/><br/>
          </div>
          <button type="submit" class="btn btn-default">Submit</button>
          <% if idea.id %>
          <button href="/" type="submit" class="btn btn-danger">Cancel</button>
          <% end %>
        </div>
      </form>
    </form>
  </div>
</div>
